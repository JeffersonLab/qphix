# {{ generated_warning }}

{% macro prefix_dependencies(prefix) -%}
{% for include in generated_for_prefix[prefix] -%}
        ./generated/{{ include }} \
{% endfor -%}
{% endmacro -%}

{{ isa }}_includedir = $(includedir)/qphix/{{ isa }}

nobase_{{ isa }}_include_HEADERS = \
        {% for extra_include in extra_includes -%}
        {{ extra_include }} \
        {% endfor -%}
        {{ prefix_dependencies('dslash') -}}
        ./dslash_{{ isa }}_complete_specialization.h

if QPHIX_BUILD_CLOVER
nobase_{{ isa }}_include_HEADERS += \
        {{ prefix_dependencies('clov_dslash') -}}
        ./clov_dslash_{{ isa }}_complete_specialization.h
endif

if QPHIX_BUILD_TWISTED_MASS
nobase_{{ isa }}_include_HEADERS += \
        {{ prefix_dependencies('tmf_dslash') -}}
        ./tmf_dslash_{{ isa }}_complete_specialization.h
endif

if QPHIX_BUILD_TWISTED_MASS_WITH_CLOVER
nobase_{{ isa }}_include_HEADERS += \
        {{ prefix_dependencies('tmf_clov_dslash') -}}
        ./tmf_clov_dslash_{{ isa }}_complete_specialization.h
endif

if QPHIX_BUILD_ND_TWISTED_MASS
nobase_{{ isa }}_include_HEADERS += \
        {{ prefix_dependencies('ndtm_dslash') -}}
        ./tmf_dslash_{{ isa }}_complete_specialization.h
endif

if QPHIX_BUILD_ND_TWISTED_MASS_WITH_CLOVER
nobase_{{ isa }}_include_HEADERS += \
        {{ prefix_dependencies('ndtm_clov_dslash') -}}
        ./tmf_clov_dslash_{{ isa }}_complete_specialization.h
endif
